@model CreateMessageDto
@{
    ViewData["Title"] = "CreateMessage";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Mesaj Oluşturma Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="Sender" value="@ViewBag.SenderId" class="form-control" />

                    <label>Alıcı E-Mail</label>
                    <input type="text" asp-for="ReceiverEmail" class="form-control" />
                    <br />
                    <label>Konu</label>
                    <input type="text" asp-for="Subject" class="form-control" />
                    <br />
                    <label>Mesaj İçeriği: </label>
                    <textarea type="text" asp-for="Detail" class="form-control" rows="5"></textarea>
                    <br />
                    <button type="submit" class="btn btn-info">Gönder</button>
                </form>
                <a href="/EstateAgent/Message/SendBox/" class="btn btn-secondary mt-3 mb-3"><i class="fa fa-arrow-left"></i> Geri</a>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.errorMessage))
{
    <script type="text/javascript">
        alert('@ViewBag.errorMessage');
    </script>
}