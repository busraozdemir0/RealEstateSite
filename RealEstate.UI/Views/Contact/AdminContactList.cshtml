@model List<ResultContactDto>
@{
    ViewData["Title"] = "AdminContactList";
    Layout = "~/Views/Admin/Index.cshtml";

    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Gelen Mesajlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col">Konu</th>
                                <th scope="col">Mesaj</th>
                                <th scope="col">Detay</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Message</td>
                                    <td><a data-id="@item.ContactID" asp-controller="Contact" asp-action="AdminContactGetById" asp-route-contactId="@item.ContactID" class="btn btn-outline-primary">Detay</a></td>
                                    <td><a data-id="@item.ContactID" asp-controller="Contact" asp-action="AdminContactDelete" asp-route-contactId="@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>