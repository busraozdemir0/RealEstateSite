@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    <td>@(item.CategoryStatus ? "Aktif" : "Pasif")</td>
                                    <td><a data-id="@item.CategoryID" asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a data-id="@item.CategoryID" asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-info">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
