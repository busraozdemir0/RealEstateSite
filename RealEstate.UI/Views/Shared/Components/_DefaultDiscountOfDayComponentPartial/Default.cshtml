@model List<ResultOptimalPrice3ProductWithCategoryDto>

<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-big text-center">Günün 3 Fırsatı</h3>
            <div class="row mt-lg-5 mt-4 pt-3">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mt-md-0 mt-sm-4">
                        <div class="grids5-info">
                            <span class="posted-date">
                                <a href="/Property/PropertySingle/@item.ProductID">
                                    <span class="small">@item.AdvertisementDate.ToString("yyyy")</span>
                                    <span class="big">@item.AdvertisementDate.ToString("dd")</span>
                                    <span class="small">@item.AdvertisementDate.ToString("MMMMMM")</span>
                                </a>
                            </span>
                            <a href="/Property/PropertySingle/@item.ProductID" class="d-block zoom">
                                <img src="@item.CoverImage" alt="" style="height:250px;" class="img-fluid news-image" />
                            </a>
                            <div class="blog-info">
                                <a href="/Property/PropertySingle/@item.ProductID" class="category">@item.CategoryName</a>
                                <h4><a href="/Property/PropertySingle/@item.ProductID">@item.Title</a></h4>
                                @if (item.Description.Length < 100)
                                {
                                    <p>@item.Description</p>
                                }
                                else
                                {
                                    <p>@item.Description.Substring(0, 100)</p>
                                }
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>
</div>