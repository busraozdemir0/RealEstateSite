@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";

    int count = 0;
}

<style>
    img {
        border-radius: 50%;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyonlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.ImageUrl" height="50" width="50" />  @item.CityName</td>
                                    <td><a data-id="@item.LocationID" asp-controller="PopularLocation" asp-action="DeletePopularLocation" asp-route-id="@item.LocationID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
                                    <td><a data-id="@item.LocationID" asp-controller="PopularLocation" asp-action="UpdatePopularLocation" asp-route-id="@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="PopularLocation" asp-action="CreatePopularLocation" class="btn btn-outline-info">Yeni Lokasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>