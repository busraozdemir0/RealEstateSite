@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";

    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kullanıcı Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Kullanıcı Adı</th>
                                <th scope="col">Rol</th>
                                <th scope="col">E-Mail</th>
                                <th scope="col">Telefon Numarası</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.UserName</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td><a data-id="@item.UserId" asp-controller="AppUser" asp-action="DeleteAppUser" asp-route-appUserId="@item.UserId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a data-id="@item.UserId" asp-controller="AppUser" asp-action="UpdateAppUser" asp-route-appUserId="@item.UserId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="AppUser" asp-action="CreateAppUser" class="btn btn-outline-info">Yeni Kullanıcı Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>