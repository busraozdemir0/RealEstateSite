@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.productID</th>
                                    <td>@item.title</td>
                                    <td>@item.city</td>
                                    <td>@item.district</td>
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                    <td><a data-id="@item.productID" asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a data-id="@item.productID" asp-controller="Product" asp-action="UpdateProduct" asp-route-productId="@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a data-id="@item.productID" asp-controller="Product" asp-action="ProductDetail" asp-route-productId="@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
