@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";

    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Personel Adı</th>
                                <th scope="col">Unvan</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Title</td>
                                    <td>@(item.Status ? "Aktif" : "Pasif")</td>
                                    <td><a data-id="@item.EmployeeID" asp-controller="Employee" asp-action="DeleteEmployee" asp-route-employeeId="@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a data-id="@item.EmployeeID" asp-controller="Employee" asp-action="UpdateEmployee" asp-route-employeeId="@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-outline-info">Yeni Personel Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>